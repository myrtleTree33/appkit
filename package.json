{
  "name": "@appist/appkit",
  "version": "1.0.0",
  "description": "An opinionated productive web framework to supercharge your feature development.",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 16",
    "npm": ">= 7"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "lint": "prettier --check . && eslint --ignore-path .gitignore .",
    "lint:fix": "prettier --write . && eslint --fix --ignore-path .gitignore .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appist/appkit.git"
  },
  "author": "cayter <cayter@appist.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appist/appkit/issues"
  },
  "homepage": "https://github.com/appist/appkit#readme",
  "dependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "async": "^3.2.0",
    "babel-jest": "^26.6.3",
    "docker-compose": "^0.23.8",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "jest": "^26.6.3",
    "knex": "^0.95.4",
    "lint-staged": "^10.5.4",
    "mssql": "^6.3.1",
    "mysql2": "^2.2.5",
    "nodemon": "^2.0.7",
    "oracledb": "^5.1.0",
    "pg": "^8.6.0",
    "pino": "^6.11.3",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "sade": "^1.7.4",
    "sqlite3": "^5.0.2",
    "svelte": "^3.37.0",
    "svelte-preprocess": "^4.7.2",
    "tiny-glob": "^0.2.8",
    "typescript": "^4.2.4",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v19.2.0",
    "vite": "^2.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.6",
    "@types/eslint": "^7.2.10",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/nodemon": "^1.19.0",
    "@types/pino": "^6.3.7",
    "@types/prettier": "^2.2.3",
    "@types/sade": "^1.7.2",
    "husky": "^6.0.0",
    "rimraf": "^2.7.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021
    },
    "env": {
      "es2021": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-var-requires": 0
    }
  },
  "eslintIgnore": [
    ".DS_Store",
    "coverage",
    "dist",
    "node_modules"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{ts}": "eslint --fix",
    "*.{json,md,ts}": "prettier --write"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  }
}
